config ODINFS_FS
	tristate "ODINFS"
	depends on HAS_IOMEM
	select CRC16
	help
	   If your system has a block of fast (comparable in access speed to
	   system memory) and non-volatile byte-addressable memory and you wish to
	   mount a light-weight, full-featured, and space-efficient filesystem over
	   it, say Y here, and read <file:Documentation/filesystems/odinfs.txt>.

	   To compile this as a module,  choose M here: the module will be
	   called odinfs.

config ODINFS_XIP
	bool "Execute-in-place in ODINFS"
	depends on ODINFS_FS && BLOCK
	help
	   Say Y here to enable XIP feature of ODINFS.

config ODINFS_WRITE_PROTECT
	bool "ODINFS write protection"
	depends on ODINFS_FS && MMU && HAVE_SET_MEMORY_RO
	default y
	help
	   Say Y here to enable the write protect feature of ODINFS.

config ODINFS_TEST
	bool
	depends on ODINFS_FS

config ODINFS_TEST_MODULE
	tristate "ODINFS Test"
	depends on ODINFS_FS && ODINFS_WRITE_PROTECT && m
	select ODINFS_TEST
	help
	  Say Y here to build a simple module to test the protection of
	  ODINFS. The module will be called odinfs_test.
